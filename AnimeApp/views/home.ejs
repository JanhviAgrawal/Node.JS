        <!-- blog  -->
        <section class="blog">
            <div class="container">
                <div class="blog-title text-center my-5">
                    <h2>Anime World</h2>
                    <p>In the anime world, fate is written in scars, and only those who walk through darkness learn how
                        to shine.</p>
                </div>
                <div class="jjk-btn-abc">
                    <a class="jjk-dark-btn" href="/addAnime">
                        ADD MORE ANIMES
                    </a>
                </div>

                <div id="swipe" class="carousel slide">
                    <div class="carousel-inner">

                        <% for (let i=0; i < allAnimes.length; i +=4) { %>
                            <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                                <div class="row">

                                    <% allAnimes.slice(i, i + 4).forEach(anime=> { %>
                                        <div class="col-lg-3 col-md-6 mb-4">
                                            <div class="card h-100">
                                                <div class="rounded-3 overflow-hidden">
                                                    <img src="<%= anime.anime_img %>" class="w-100"
                                                        alt="<%= anime.anime_name %>">
                                                </div>

                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        <%= anime.anime_name %>
                                                    </h5>
                                                    <p class="mb-1">
                                                        <%= anime.anime_genres %>
                                                    </p>
                                                    <small class="text-muted d-block mb-2">
                                                        <%= anime.anime_lang %> | Episodes: <%= anime.anime_ep_num %>
                                                    </small>

                                                    <!-- Read More Button with data attributes -->
                                                    <a href="javascript:void(0)" class="btn btn-danger btn-sm read-more"
                                                        data-id="<%= anime._id %>" data-name="<%= anime.anime_name %>"
                                                        data-production="<%= anime.anime_production %>"
                                                        data-author="<%= anime.anime_auth %>"
                                                        data-language="<%= anime.anime_lang %>"
                                                        data-genres="<%= anime.anime_genres %>"
                                                        data-episodes="<%= anime.anime_ep_num %>"
                                                        data-seasons="<%= anime.anime_season %>"
                                                        data-image="<%= anime.anime_img %>">
                                                        Read More
                                                    </a>

                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>

                                </div>
                            </div>
                            <% } %>

                    </div>

                    <!-- Controls -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#swipe" data-bs-slide="prev">
                        <i class="ri-arrow-left-s-line fs-1 text-dark"></i>
                    </button>

                    <button class="carousel-control-next" type="button" data-bs-target="#swipe" data-bs-slide="next">
                        <i class="ri-arrow-right-s-line fs-1 text-dark"></i>
                    </button>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="staticBackdrop" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered modal-lg">
                        <div class="modal-content rounded-4 shadow-lg">

                            <div class="modal-header bg-dark text-white">
