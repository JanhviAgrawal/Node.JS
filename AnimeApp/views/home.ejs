    <!-- Bootstrap JS -->
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('.read-more').forEach(btn => {
            btn.addEventListener('click', function () {

                const animeId = this.dataset.id;
                const name = this.dataset.name;
                const production = this.dataset.production;
                const author = this.dataset.author;
                const language = this.dataset.language;
                const genres = this.dataset.genres;
                const episodes = this.dataset.episodes;
                const seasons = this.dataset.seasons;
                const image = this.dataset.image;

                // Modal Title
                document.getElementById('staticBackdropLabel').innerText = name;

                // Modal Body
                document.getElementById('modalContent').innerHTML = `
            <div class="row">
                <div class="col-md-3">
                    <img src="${image}" class="img-fluid rounded-3 shadow">
                </div>
                <div class="col-md-9">
                    <p><strong>Production House:</strong> ${production}</p>
                    <p><strong>Anime Author:</strong> ${author}</p>
                    <p><strong>Anime Language:</strong> ${language}</p>
                    <p><strong>Anime Genres:</strong> ${genres}</p>
                    <p><strong>Total Episodes:</strong> ${episodes}</p>
                    <p><strong>Total Seasons:</strong> ${seasons}</p>
                </div>
            </div>
        `;

                // Routes
                document.getElementById('editBtn').href = `/editAnime/${animeId}`;
                document.getElementById('deleteBtn').href = `/deleteAnime?animeId=${animeId}`;

                // Show Modal
                new bootstrap.Modal(document.getElementById('staticBackdrop')).show();
            });
        });
    </script>

